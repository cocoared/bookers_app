<p id="notice"></p>
<h1>Books</h1>
<% @books.each do |book| %>
<span>
  <%=link_to book.title, bookshow_path(book.id) %>
</span>
<table>
  <thead>
    <tr>
    </tr>
  </thead>
</table>

<% end %>

<h2>New book</h2>
<%= form_with model: @book,url: '/books', method: :post, local:true do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>
<%= f.submit ' Create Book ' %>

<% end %>